{% extends "SorabjiPatientBundle::logged_in.html.twig" %}

{% block content %}

<div class="span4">

  <h1>Invitation</h1>

  <table class="table table-striped record_properties">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
      </tr>
      <tr>
        <th>Code</th>
        <td>{{ entity.code }}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{ entity.email }}</td>
      </tr>
      <tr>
        <th>Notes</th>
        <td>{{ entity.notes }}</td>
      </tr>
      <tr>
        <th>Sent</th>
        <td>{{ entity.getSentString }}</td>
      </tr>
      <tr>
        <th>Active</th>
        <td>{{ entity.getActiveString }}</td>
      </tr>
    </tbody>
  </table>

  <ul class="record_actions">
    <li>
      <a href="{{ path('invitation') }}">
        Back to the list
      </a>
    </li>
    <li>
      <a href="{{ path('invitation_edit', { 'id': entity.id }) }}">
        Edit
      </a>
    </li>
    <li>
      <form action="{{ path('invitation_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    </li>
  </ul>

</div>

{% endblock %}
