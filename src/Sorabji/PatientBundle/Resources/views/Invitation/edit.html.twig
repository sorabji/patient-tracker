{% extends "SorabjiPatientBundle::logged_in.html.twig" %}

{% block content %}

<div class="span12">

  <h1>Invitation edit</h1>

  <form action="{{ path('invitation_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
      <button class="btn btn-primary" type="submit">Edit</button>
    </p>
  </form>

  <ul class="record_actions">
    <li>
      <a href="{{ path('invitation') }}">
        Back to the list
      </a>
    </li>
    <li>
      <form action="{{ path('invitation_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    </li>
  </ul>
</div>
{% endblock %}
